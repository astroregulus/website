---
const props = {
  ...Astro.props,
  href:
    Astro.props.href.startsWith("/") && import.meta.env.BASE_URL != "/"
      ? `${import.meta.env.BASE_URL}${Astro.props.href}`
      : Astro.props.href,
  class: "hover:text-indigo-500 " + Astro.props.class ?? "",
};
---

<a {...props}>
  <slot />
</a>
