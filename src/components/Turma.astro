---
const { curso, professor, data } = Astro.props;
---

<div
  class="bg-regulus/90 p-6 rounded-2xl shadow-sm border-2 border-blue-300 relative sm:w-[736px]"
>
  <div
    class="absolute top-[-2px] right-[-2px] bg-blue-300 text-regulus p-2 rounded-bl-2xl rounded-tr-2xl"
  >
    Natal
  </div>
  <h2 class="text-2xl font-bold pr-20">{curso}</h2>
  <div class="mt-3 sm:flex justify-between">
    <p class="text-base">Início: <slot name="inicio" /></p>
    <p class="text-base">Horário: <slot name="horario" /></p>
    <p class="text-base">Duração: <slot name="duracao" /></p>
  </div>
  <p class="text-base my-3">{professor}</p>
  <!-- <p class="text-base my-3">Pré-requisitos: None</p> -->
  <p class="text-base mt-3">
    <slot name="breve-descricao" />
  </p>
  <details class="mt-5">
    <summary class="text-base cursor-pointer">Leia mais</summary>
    <p class="text-base mt-3">
      <slot />
    </p>
  </details>
</div>

<style>
  .titulo {
    /* color: rgba(var(--accent)); */
  }

  .turma {
    list-style: none;
    /* display: flex; */
    padding: 12px;
    /* background-color: #212b42; */
    background-color: #0f335a;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
</style>
