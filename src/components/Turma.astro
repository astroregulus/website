---
const { curso, professor, data } = Astro.props;
---

<div class="text-white turma">
  <h2 class="titulo font-bold">{curso}</h2>
  <p>{professor}</p>
  <div class="text-sm">
    <slot />
  </div>
  <ul>
    <li>duração: <slot name="duracao" /></li>
    <li>início: <slot name="inicio" /></li>
    <li>valor: <slot name="valor" /></li>
  </ul>

  <style>
    .titulo {
      /* color: rgba(var(--accent)); */
    }

    .turma {
      list-style: none;
      /* display: flex; */
      padding: 12px;
      /* background-color: #212b42; */
      background-color: #0f335a;
      background-image: none;
      background-size: 400%;
      border-radius: 7px;
      background-position: 100%;
      transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
      box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }
  </style>
</div>
